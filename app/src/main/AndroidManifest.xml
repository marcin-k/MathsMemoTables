        </activity>
        <activity
            android:name=".GamePlayLarge"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GamePlayMid"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GamePlaySmall"
            android:screenOrientation="portrait" />
